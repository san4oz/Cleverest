@model Cleverest.Mvc.ViewModels.Admin.GalleryViewModel

<section class="section">
    <div class="container">
        @if(Model.Photos.Any())
        { 
        <div class="columns is-multiline">
            @foreach (var photo in Model.Photos)
            {
                <div class="column is-4 selectable">
                    <div class="card">
                        <div class="card-image">
                            <figure class="is-4by3">
                                <img src="@photo" />
                            </figure>
                        </div>
                    </div>
                </div>
            }
        </div>
        }
        else
        {
            <div class="notification is-info">
                <h1 class="title">
                    Фото відсутні. Будь ласка, додайте їх куристуючись кнопками знизу.
                </h1>
            </div>
        }     
    </div>
</section>


