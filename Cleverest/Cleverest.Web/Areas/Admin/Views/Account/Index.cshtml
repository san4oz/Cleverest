@model IEnumerable<Cleverest.Mvc.ViewModels.Admin.AccountListViewModel>

@{
    ViewBag.Title = "List";
}

<div id="gameListPage">
    <p>
        <a href="@Url.Action("Create")" class="button is-success">Створити новий аккаунт</a>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamName)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="button is-info">Редагувати</a> |
                    <a href="#" data-id="@item.Id" data-url="@Url.Action("Delete")" class="delete-btn button is-danger">Видалити</a>
                </td>
            </tr>
        }

    </table>
</div>


<div id="delete-account" style="display: none;">
    @Html.Partial("_YesNoPopup",
        new Cleverest.Mvc.ViewModels.Shared.PopupModel()
        {
            TitleKey = "Delete account",
            DescriptionKey = "Are you sure you want to delete the account ?"
        })
</div>