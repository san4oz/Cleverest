@model QuestionSelectorViewModel
@{
}

@using (Html.BeginForm("GetQuestions", "Question", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", enctype = "multipart/form-data", autocomplete = "false" }))
{
    <div class="columns">
        <div class="column is-10">
            <div class="control is-horizontal">
                <div class="control-label">
                    @Html.LabelFor(x => x.SelectedGameId, htmlAttributes: new { @class = "label" })
                </div>
                <div class="control">
                        <div class="select is-fullwidth">
                            @Html.DropDownListFor(x => Model.SelectedGameId, Model.Games)
                        </div>
                </div>
            </div>
            <div class="control is-horizontal">
                <div class="control-label">
                    @Html.LabelFor(x => x.SelectedRoundNo, htmlAttributes: new { @class = "label" })
                </div>
                <div class="control">
                    <div class="select is-fullwidth">
                        @Html.DropDownListFor(x => Model.SelectedRoundNo, Model.Rounds)
                    </div>
                </div>
            </div>
        </div>
        <div class="column">
            <p class="control">
                <button class="button is-warning is-large" type="submit">Шукати</button>
            </p>
            <p class="control">
                <a href="@Url.Action("Index")" class="button is-success is-large">Наступний раунд</a>
            </p>
        </div>
    </div>
}