@model List<Cleverest.Mvc.ViewModels.TeamViewModel>

@{
    Layout = "../Shared/_ProfileLayout.cshtml";
}

<div id="myTeamsPage">
    <div class="columns">
        <div class="column">
            <div class="control">
                <input type="text" id="search" data-url="@Url.Action("Search", "Team")" class="input is-large" placeholder="Почніть писати назву команду..." />
            </div>
            <div id="searchSuggestions">
            </div>
        </div>
    </div>
    <div class="columns">
        <div class="column is-8">
            <table class="table">
                <thead>
                    <tr>
                        <th>Назва</th>
                        <th>Кількість гравців</th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var team in Model)
                {
                    <tr>
                        <td><a href="@Url.Action("Details", "Team", new { id = team.Id })">@team.Name</a></td>
                        <td>@team.ParticipantsCount</td>
                        <td><a class="button is-info" href="@Url.Action("Edit", new { id = team.Id })">Редагувати</a></td>
                    </tr>
                }
            </table>
        </div>
        <div class="column is-4">
            <p class="control">
                <a class="button is-success is-medium" href="@Url.Action("CreateTeam", "Team")">Створити команду</a>
            </p>
        </div>
    </div>
</div>

