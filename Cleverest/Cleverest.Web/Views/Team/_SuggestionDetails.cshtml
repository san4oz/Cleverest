@model Cleverest.Mvc.ViewModels.TeamDetailsInfoViewModel


<div class="box">
    <article class="media suggestion-details">
        <div class="media-left">
            <figure class="image is-64x64">
                <img src="@Model.PhotoPath" alt="Image">
            </figure>
        </div>
        <div class="media-content">
            <div class="content">
                <p>
                    <strong>@Model.Name</strong>
                    <br>
                    <p class="control">
                        <a class="button is-info" data-id="@Model.Id" data-url="@Url.Action("SendJoinRequest", "Team")" id="sendJoinRequest">Надіслати запит на вступ</a>
                    </p>
                </p>               
            </div>
        </div>
    </article>
    <article class="suggestion-sent" style="display: none;">
            Запит на вступ до команди був відправлений.
    </article>
</div>