@model Cleverest.Mvc.ViewModels.TeamViewModel


<div class="box">
    <article class="media">
        <div class="media-left">
            <figure class="image is-64x64">
                <img src="http://bulma.io/images/placeholders/128x128.png" alt="Image">
            </figure>
        </div>
        <div class="media-content">
            <div class="content">
                <p>
                    <strong>@Model.Name</strong>
                    <br>
                    <p class="control">
                        <a class="button is-info" href="@Url.Action("AddTeam")">Надіслати запит на вступ</a>
                    </p>
                </p>
            </div>
        </div>
    </article>
</div>